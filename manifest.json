{

  "manifest_version": 2,
  "name": "DarkMode",
  "version": "1.0",

  "description": "Adds a browser action icon to the toolbar. Click the button to darken to lighten the page." ,

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Darken",
    "default_popup": "/popup/choose_dark.html"
  }

}
